LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.NUMERIC_STD.ALL;

ENTITY rom IS 
	PORT(DIR: IN INTEGER RANGE 0 TO 3;
	     SAL: OUT INTEGER RANGE 0 TO 255);
END ENTITY;

ARCHITECTURE BEAS OF rom IS 
	TYPE MEMORY IS ARRAY(0 TO 3) OF INTEGER RANGE 0 TO 255;
	CONSTANT ROM: MEMORY := (128,202,249); -- DATOS CALCULADOS

	BEGIN

		SAL <= ROM(DIR);

END BEAS;