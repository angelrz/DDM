LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;

ENTITY CONT IS
	PORT(CLK, RST:STD_LOGIC;
		CUENTA: BUFFER INTEGER RANGE 0 TO 9);
END ENTITY;

ARCHITECTURE amr OF CONT IS
	BEGIN
		PROCESS(CLK,RST)
		BEGIN	
		IF FALLING_EDGE(CLK) THEN
			IF RST='1' THEN
				 CUENTA <= 0;
			ELSIF CUENTA = 9 THEN
				CUENTA <= 0;
			ELSE
				CUENTA <= CUENTA + 1;
			END IF;
		END IF;
	END PROCESS;
END amr;