library ieee;
use ieee.std_logic_1164.all;

entity DECO is
	port(SEM: in integer range 0 to 2;
		  SEG: out std_logic_vector(3 downto 0));
end entity;

architecture LDDR of DECO is
	begin
	with SEM select
		SEG <= "10000011" when 0,
				 "00010001" when 1,
				 "11110101" when 2,
				 "11111111" when others;
end LDDR;